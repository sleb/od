rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Device subcollection - users can manage their own devices
      match /devices/{deviceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Devices can also read/write their own device document when authenticated as themselves
        allow read, write: if request.auth != null && request.auth.uid == deviceId;
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
